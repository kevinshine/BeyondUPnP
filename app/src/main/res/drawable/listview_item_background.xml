<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:radius="2dp"/>

            <solid android:color="#ccc" />

        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:radius="2dp" />

            <solid android:color="@color/listview_item_bg_color" />

            <padding android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

    <item>
        <selector>
            <item android:drawable="@color/holo_blue_dark" android:state_pressed="true"/>
            <item android:drawable="@color/holo_blue_dark" android:state_enabled="true" android:state_focused="true"/>
            <item android:drawable="@color/transparent"/>
        </selector>
    </item>
</layer-list>